<li class="media">
  <div class="media-body">
    <strong class="text-success"><%= comment.user.fullname %></strong>
    <p>
      <%= comment.content %>
    </p>
    <% if current_user&.id == comment.user_id %>
      <span class="text-muted pull-right">
        <%= link_to "", comment_path(comment), method: :delete, 
        data: { confirm: t(".confirm_delete") }, class: "glyphicon glyphicon-remove", remote: true %>
      </span>
    <% end %>
  </div>
</li>
