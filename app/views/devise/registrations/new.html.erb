
<% provide(:title, t(".sign_up")) %>
<h2 class="text-center"><%= t(".sign_up") %></h2>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <% %>
      <div class="field">
        <%= f.label t(".email") %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label t(".full_name") %>
        <%= f.text_field :fullname, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label t(".phone_number") %>
        <%= f.text_field :phonenumber, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label t(".password") %>
          <% if @minimum_password_length %>
          <em><%= t(".character_minimum", length: @minimum_password_length) %></em>
          <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label t(".password_confirmation") %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit t(".sign_up"), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
