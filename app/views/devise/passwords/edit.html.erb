<% provide(:title, t(".change_my_password")) %>

<h2 class="text-center"><%= t(".change_my_password") %></h2>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.label t(".password") %><br />
        <% if @minimum_password_length %>
          <em><%= t(".minimum_password", length: @minimum_password_length) %></em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label t(".cofirm_password") %><br />
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit t(".change_password"), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
