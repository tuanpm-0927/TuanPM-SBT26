<%= form_for @tour, html: {multipart: true }, url: yield(:url_action) do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control", required: true %>

  <%= f.label :description %>
  <%= f.text_area :description, class: "form-control", required: true %>

  <%= f.label :address_source %>
  <%= f.select :address_source, options_for_select(load_address, check_address_present(@tour)), {}, { :class => "form-control chosen-select", :required => true } %>
  
  <%= f.label :price %>
  <%= f.number_field :price, class: "form-control", required: true %>

  <%= f.label :discount %>
  <%= f.number_field :discount, value: 0, step: 0.5, class: "form-control", required: true %>

  <%= f.label :total_day %>
  <%= f.number_field :total_day, step: 1, class: "form-control", required: true %>
  
  <%= f.label :start_days %>
  <%= select_tag :select_start_day, options_for_select(1..31), :class => "form-control" %>
  <%= f.text_field :start_days, :class => "form-control", readonly: true %>

  <%= f.label :total_member_max %>
  <%= f.text_field :total_member_max, value: 0, class: "form-control", required: true %>

  <%= f.label :images %>
  <%= f.file_field :images, class: "form-control" %>

  <%= f.label :content %>
  <%= f.text_area :content, class: "ckeditor" %> 

  <%= f.label :category %>
  <%= f.select :category_id, options_for_select(load_categories.collect{ |u| [u.name, u.id] }, @tour.category_id), {}, { :class => "form-control", :required => true } %>

  <%= f.submit yield(:button_title), class: "form-control btn btn-primary" %>
<% end %>
