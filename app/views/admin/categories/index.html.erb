<% provide :title, t(".category_title") %>
<h1><%= t(".category_title") %></h1>
<%= link_to t(".create"), new_admin_category_path, { class: "btn btn-primary",
  "data-toggle" => "modal", "data-target" => "#myModal", remote: true } %>
<div class="form-search">
  <%= search_form_for(@q, url: admin_categories_path) do |f| %>
    <%= f.search_field :name_cont, class: "form-control" %>
    <%= f.submit t(".search"), class: "btn btn-search" %>
  <% end %>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t(".image") %></th>
      <th><%= t(".name") %></th>
      <th><%= t(".type") %></th>
      <th><%= t(".action") %></th>
    </tr>
  </thead>
  <tbody id="category_body">
      <% if @categories.empty? %>
      <tr>
        <td>
          <%= t(".empty") %>
        </td>
      </tr>
      <% else %>
        <%= render @categories %>
      <% end %>
  </tbody>
</table>
<div id="paginate_category">
  <%= will_paginate %>
</div>
  
<%= render "shared/modal" %>
