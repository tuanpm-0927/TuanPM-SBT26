<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav>
      <ul class="nav navbar-nav navbar-left">
        <% if admin? %>
          <%= link_to t(".nameapp"), admin_path, id: "logo" %>
        <% else %>
          <%= link_to t(".nameapp"), root_path, id: "logo" %>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <div class="row">
          <div class="col-sm-4">
          </div>
          <% if logged_in? %>
            <div class="dropdown">
              <%= link_to "#", class:"btn btn-primary dropdown-toggle", "data-toggle" => "dropdown" do %>
                <%= current_user.fullname %><span class="caret"> </span>
              <% end %>
              <ul class="dropdown-menu">
                <% if admin? %>
                  <li><%= link_to t(".logout"), destroy_user_session_path, method: :delete %></li>
                <% else %>
                  <li><%= link_to t(".change_password"), edit_password_reset_path(email: current_user.email,
                    id: current_user.id) %></li>
                  <li><%= link_to t(".my_profile"), user_path(current_user) %></li>
                  <li><%= link_to t(".userbooking"), userbooking_path %></li>
                  <li><%= link_to t(".payment_history"), paymenthistory_path %></li>
                  <li><%= link_to t(".manager_post"), posts_path %></li>
                  <li><%= link_to t(".logout"), destroy_user_session_path, method: :delete %></li>
                <% end %>
              </ul>
            </div>
          <% else %>
            <div class="col-sm-4">
              <%= link_to t(".login"), new_user_session_path, class: "btn btn-primary" %>
            </div>
            <div class="col-sm-4">
              <%= link_to t(".signup"), new_user_registration_path, class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </ul>
    </nav>
  </div>
</header>
